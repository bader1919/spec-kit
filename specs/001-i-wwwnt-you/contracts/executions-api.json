{
  "openapi": "3.0.3",
  "info": {
    "title": "N8N Dashboard API - Executions",
    "version": "1.0.0",
    "description": "API contract for execution-related endpoints"
  },
  "paths": {
    "/api/executions": {
      "get": {
        "summary": "Get recent executions",
        "description": "Retrieve the last 5 active executions across all workflows",
        "parameters": [
          {
            "name": "workflowId",
            "in": "query",
            "required": false,
            "schema": { "type": "string" },
            "description": "Filter executions by specific workflow"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "minimum": 1, "maximum": 5, "default": 5 },
            "description": "Number of executions to return"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved executions",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Execution" }
                    },
                    "timestamp": { "type": "string", "format": "date-time" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Authentication failed",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/executions/{executionId}": {
      "get": {
        "summary": "Get execution details",
        "description": "Retrieve detailed information including node-level execution data",
        "parameters": [
          {
            "name": "executionId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Unique execution identifier"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved execution details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "data": { "$ref": "#/components/schemas/ExecutionDetail" },
                    "timestamp": { "type": "string", "format": "date-time" }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Execution not found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Execution": {
        "type": "object",
        "required": ["id", "workflowId", "status", "startTime"],
        "properties": {
          "id": { "type": "string", "description": "Unique execution identifier" },
          "workflowId": { "type": "string", "description": "Reference to parent workflow" },
          "status": {
            "type": "string",
            "enum": ["running", "success", "error", "cancelled"],
            "description": "Execution status"
          },
          "startTime": {
            "type": "string",
            "format": "date-time",
            "description": "When execution began"
          },
          "endTime": {
            "type": "string",
            "format": "date-time",
            "nullable": true,
            "description": "When execution completed"
          },
          "duration": {
            "type": "number",
            "minimum": 0,
            "nullable": true,
            "description": "Execution time in milliseconds"
          },
          "mode": {
            "type": "string",
            "description": "Execution mode (manual, trigger, webhook, etc.)"
          },
          "errorMessage": {
            "type": "string",
            "nullable": true,
            "description": "Error details if execution failed"
          }
        }
      },
      "ExecutionDetail": {
        "allOf": [
          { "$ref": "#/components/schemas/Execution" },
          {
            "type": "object",
            "properties": {
              "nodes": {
                "type": "array",
                "items": { "$ref": "#/components/schemas/Node" },
                "description": "Detailed node execution information"
              }
            }
          }
        ]
      },
      "Node": {
        "type": "object",
        "required": ["name", "type", "executionStatus"],
        "properties": {
          "name": { "type": "string", "description": "Node identifier within workflow" },
          "type": { "type": "string", "description": "Node type (trigger, action, condition, etc.)" },
          "executionStatus": {
            "type": "string",
            "enum": ["success", "error", "skipped", "running"],
            "description": "Node execution status"
          },
          "startTime": {
            "type": "string",
            "format": "date-time",
            "nullable": true,
            "description": "When node execution began"
          },
          "endTime": {
            "type": "string",
            "format": "date-time",
            "nullable": true,
            "description": "When node execution completed"
          },
          "executionTime": {
            "type": "number",
            "minimum": 0,
            "nullable": true,
            "description": "Node processing time in milliseconds"
          },
          "errorDetails": {
            "type": "string",
            "nullable": true,
            "description": "Error message if node failed"
          }
        }
      },
      "Error": {
        "type": "object",
        "required": ["success", "error", "timestamp"],
        "properties": {
          "success": { "type": "boolean", "example": false },
          "error": {
            "type": "object",
            "properties": {
              "code": { "type": "string", "description": "Error code" },
              "message": { "type": "string", "description": "Error message" },
              "details": { "type": "string", "description": "Additional error details" }
            }
          },
          "timestamp": { "type": "string", "format": "date-time" }
        }
      }
    }
  }
}